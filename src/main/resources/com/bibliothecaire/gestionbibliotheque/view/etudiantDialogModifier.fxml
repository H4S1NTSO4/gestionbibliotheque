<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bibliothecaire.gestionbibliotheque.controller.EtudiantDialogController"
      spacing="20" style="-fx-padding: 25; -fx-background-color: #ffffff;">

    <!-- Titre du dialog -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 0 15 0; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0;">
        <FontIcon iconLiteral="fas-user-edit" iconSize="24" iconColor="#6366f1"/>
        <Label text="Modifier un étudiant" style="-fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #111827;"/>
    </HBox>

    <!-- Formulaire -->
    <GridPane hgap="15" vgap="15" style="-fx-padding: 10 0;">
        <!-- Matricule (désactivé en modification) -->
        <Label text="Matricule" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151;"/>
        <TextField fx:id="txtMatricule" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   prefWidth="300" styleClass="form-field" editable="false"
                   style="-fx-background-color: #f3f4f6; -fx-opacity: 0.7;"/>

        <!-- Nom et Prénoms -->
        <Label text="Nom et Prénoms *" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151;"/>
        <TextField fx:id="txtNomPrenoms" promptText="Ex: Dupont Jean" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   prefWidth="300" styleClass="form-field"/>

        <!-- Email -->
        <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151;"/>
        <TextField fx:id="txtEmail" promptText="Ex: jean.dupont@univ.fr" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   prefWidth="300" styleClass="form-field"/>

        <!-- Téléphone -->
        <Label text="Téléphone" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151;"/>
        <TextField fx:id="txtTelephone" promptText="Ex: 0610203040" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   prefWidth="300" styleClass="form-field"/>

        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="150"/>
            <ColumnConstraints minWidth="300" prefWidth="300"/>
        </columnConstraints>
    </GridPane>

    <!-- Message d'information -->
    <HBox spacing="8" alignment="CENTER_LEFT" style="-fx-background-color: #FEF3C7; -fx-padding: 12; -fx-background-radius: 8;">
        <FontIcon iconLiteral="fas-exclamation-triangle" iconSize="16" iconColor="#D97706"/>
        <Label text="Le matricule ne peut pas être modifié"
               style="-fx-font-size: 13px; -fx-text-fill: #92400E;"/>
    </HBox>

    <!-- Boutons d'action -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 15 0 0 0;">
        <Button fx:id="btnAnnuler" text="Annuler" styleClass="btn-secondary" prefWidth="120"/>
        <Button fx:id="btnEnregistrer" text="Modifier" styleClass="btn-primary" prefWidth="120"/>
    </HBox>

</VBox>
